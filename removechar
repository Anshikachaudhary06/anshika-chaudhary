#include <iostream>
using namespace std;
class rov{
    public:
    string s;
    char k;

void set(){
   cout<<"enter the name:";
   getline(cin,s);
   cout<<"character which you want to remove from the string:";
   cin>>k;
}
void display()
{
   cout<<"the updated string is:";
   for(int i=0;s[i]!='\0';i++)
   {
       if(s[i]!=k)
       {
           cout<<s[i];
       }
   }
}
};
int main(){
    rov d;
    d.set();
    d.display();
}
